{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile",
            "type": "shell",
            "command": "g++ -c ./src/*.cpp -I\"C:/SFML/Install/Include\" -std=c++11 -Os \n echo [COMPILATION] done. \n g++ -static -static-libgcc -static-libstdc++ *.o -g -o ./release/app -L\"C:/SFML/Install/lib\" -lsfml-graphics -lsfml-window -lsfml-audio -lsfml-network -lsfml-system\n echo [CREATION] app.exe created. \n del *.o",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Compile & Run",
            "type": "shell",
            "command": "g++ -c ./src/*.cpp -I\"C:/SFML/Install/Include\" -std=c++11 -Os \n echo [COMPILATION] done. \n g++ -static -static-libgcc -static-libstdc++ *.o -g -o ./release/app -L\"C:/SFML/Install/lib\" -lsfml-graphics -lsfml-window -lsfml-audio -lsfml-network -lsfml-system\n echo [CREATION] app.exe created. \n del *.o \n cd release \n .\\app.exe",
            "problemMatcher": []
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "cd release \n .\\app.exe"
        }
    ]
}